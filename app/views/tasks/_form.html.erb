<%= form_with(model: @task, remote: true) do |form| %>
  
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_field :description, id: :task_description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :deadline %>
    <%= form.text_field :deadline, id: 'datetimepicker1', placeholder: "When's it due?", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.button :Submit, class: "btn btn-primary" %>
  </div>
<% end %>
